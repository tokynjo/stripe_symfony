<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}

            {% stylesheets '@ApiBundle/Resources/views/bower_components/bootstrap/dist/css/*'
            'bower_components/bootstrap/dist/css/*'
            filter='cssrewrite' %}
                    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media='all'>
            {%  endstylesheets %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <style>
                .text-white{
                    color: #fff!important;
                }
                .icon-bar{
                    background: #FFF!important;
                }
            </style>
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header" style="background: #00b3ee">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only text-white">Toggle navigation</span>
                            <span class="icon-bar text-white"></span>
                            <span class="icon-bar text-white"></span>
                            <span class="icon-bar text-white"></span>
                        </button>
                        <a class="navbar-brand text-white" href="#" >TEST</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="background: #00b3ee">
                        <ul class="nav navbar-nav">
                            <li class=" "><a href="{{ path('app_get_token_stripe')}}">Customers <span class="sr-only">(current)</span></a></li>
                            <li class="active"><a href="{{ path('app_liste_client_stripe') }}">Customers <span class="sr-only"></span></a></li>
                            <li class=" "><a href="#">Customers <span class="sr-only">(current)</span></a></li>
                            <li class=" "><a href="#">Customers <span class="sr-only">(current)</span></a></li>

                        </ul>


                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

        <div class="container" style="margin-top: 50px;">
            <h5 style="color: cornflowerblue;padding: 15px">
                {% block header %}{% endblock %}
            </h5>
            {% block content %}

            {% endblock %}
        </div>

        {% endblock %}
        {% block javascripts %}
            {% javascripts 'bower_components/jquery/dist/jquery.js' 'bower_components/bootstrap/dist/js/*' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
        <div class="item2 text-center hide cache" style="width:100%;background: #000;opacity: 0.4;z-index:
     9999;position:fixed;top:0px;left: 0px;height: 100%">
            {#<div class=" ld ld-ring ld-cycle x2" style="height: 60px;width: 60px;top: 50%;font-size:30px;color:#FFF"></div>#}
            <div class=" ld ld-ring ld-spin-fast huge" style="height: 60px;width: 60px;top: 50%;font-size:30px;color:#FFF"></div>
        </div>
    </body>
</html>
